{
  "manifest_version": 3,
  "name": "TabGuard",
  "version": "1.0",
  "description": "Prompts for confirmation when attempting to close a tab",
  "developer": {
    "name": "Gabriel Phua",
    "url": "https://gphua.com"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "menus"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["tabguard.js"]
    }
  ],
  "icons": {
      "16": "icons/lock.svg",
      "32": "icons/lock.svg",
      "64": "icons/lock.svg"
    },
  "action": {
    "default_icon": {
      "16": "icons/unlock.svg",
      "32": "icons/unlock.svg",
      "64": "icons/unlock.svg"
    },
    "default_title": "Click to toggle tab lock"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tabguard-v1.0@gphua.com"
    }
  }
}